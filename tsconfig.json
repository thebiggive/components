{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "skipLibCheck": true, //https://stackoverflow.com/a/68262351/20012370
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
